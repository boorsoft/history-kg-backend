// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  firstName String?
  lastName  String?
  email     String? @unique
  isAdmin   Boolean @default(false)
}

model Answer {
  id              Int      @id @default(autoincrement())
  text            String
  questionId      Int
  isCorrectAnswer Boolean  @default(false)
  Question        Question @relation(fields: [questionId], references: [id])
}

model Question {
  id      Int      @id @default(autoincrement())
  text    String
  Quiz    Quiz     @relation(fields: [quizId], references: [id])
  quizId  Int
  answers Answer[]
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String     @unique
  questions Question[]
}

model Paragraph {
  id    Int    @id @default(autoincrement())
  title String
  text  String
  image String
}

model Person {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  bio       String
  image     String
}
